<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="50dp">

    <Button
        android:id="@+id/btnCadastrarCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnCadastrarClienteClick"
        android:text="Cadastrar Cliente"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnListarClientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnListarClientesClick"
        android:text="Listar Clientes"
        android:textSize="25sp" />

</LinearLayout>