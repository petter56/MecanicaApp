<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="50dp">

    <Button
        android:id="@+id/btnCadastrarFuncionario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnCadastrarFuncionarioClick"
        android:text="Cadastrar Funcionário"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnListarFuncionarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnListarFuncionariosClick"
        android:text="Listar Funcionários"
        android:textSize="25sp" />

</LinearLayout>